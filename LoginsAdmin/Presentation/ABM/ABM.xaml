<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LoginsAdmin.Presentation.ViewModels"
             xmlns:ctrls="clr-namespace:LoginsAdmin.Presentation._Controles"
             mc:Ignorable="d"
             x:Class="LoginsAdmin.Presentation.ABM">

    <ContentPage.BindingContext>
        <local:ABMViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout 
            BackgroundColor="#7DA7F5" 
            Padding="0"
            Margin="0"
            Orientation="Vertical">
            <Grid 
                Padding="0" 
                RowSpacing="1" 
                ColumnSpacing="1" 
                Margin="5, 0, 5, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>    <!-- Header -->
                    <RowDefinition Height="10*" />  <!-- Datos del servicio -->
                    <RowDefinition Height="4*" />   <!-- Guardar - Eliminar -->
                    <RowDefinition Height="20" />   <!-- Footer -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" BackgroundColor="#7DA7F5"  Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>

                    <Image 
                        Grid.Column="0" 
                        Source="icon" 
                        HorizontalOptions="Center"/>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label 
                            Grid.Column="1"
                            Text="LoginsAdmin" 
                            TextColor="#1C41D7" 
                            FontSize="Title" 
                            HorizontalTextAlignment="Center" 
                            VerticalTextAlignment="Center"
                            FontAttributes="Bold"/>
                    </Grid>
                </Grid>

                <!-- Datos del servicio -->
                <Grid Grid.Row="1" BackgroundColor="#448fff" Padding="5" VerticalOptions="Fill">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout 
                        Grid.Row="0"
                        Orientation="Vertical">
                        <Label Text="Nombre del servicio:" TextColor="White"/>
                        <Entry Text="{Binding Nombre}" MaxLength="200"/>
                    </StackLayout>

                    <StackLayout 
                        Grid.Row="1"
                        Orientation="Vertical">
                        <Label Text="Usuario:" TextColor="White"/>
                        <Entry Text="{Binding Usuario}" MaxLength="200"/>
                    </StackLayout>

                    <StackLayout 
                        Grid.Row="2"
                        Orientation="Vertical">
                        <Label Text="Clave:" TextColor="White"/>
                        <Entry Text="{Binding Clave}" MaxLength="200"/>
                    </StackLayout>

                    <StackLayout 
                        Grid.Row="3"
                        Orientation="Vertical">
                        <Label Text="Otros datos:" TextColor="White"/>
                        <Editor Text="{Binding OtrosDatos}"/>
                    </StackLayout>
                </Grid>

                <!-- Guardar - Eliminar -->
                <StackLayout Grid.Row="2" BackgroundColor="#7DA7F5" Orientation="Vertical">
                    <Button Text="Guardar"
                        Command="{Binding GuardarCommand}" IsEnabled="{Binding IsValidServiceName}"/>
                    <Button Text="Eliminar"
                        Command="{Binding EliminarCommand}" IsVisible="{Binding IsEditMode}"/>
                </StackLayout>
                
                <!-- Footer -->
                <StackLayout Grid.Row="3" BackgroundColor="#7DA7F5" VerticalOptions="Fill" >
                    <ctrls:About HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>                
                </StackLayout>
            </Grid>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>