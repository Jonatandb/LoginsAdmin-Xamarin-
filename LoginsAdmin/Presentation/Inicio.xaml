<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LoginsAdmin.Presentation.Inicio">
    <StackLayout 
        BackgroundColor="#7DA7F5" Orientation="Vertical" 
        x:Name="StackPrincipal"
        Spacing="10"
    >
        
        <Label 
            Text="LoginsAdmin" 
            TextColor="#1C41D7" 
            FontSize="Title" 
            HorizontalTextAlignment="Center" 
            FontAttributes="Bold"
        />
        
        <Entry 
            Placeholder="Nombre, Email, Observaciones..." 
            FontAttributes="Italic" 
            BackgroundColor="White"/>
        
        <ListView 
            BackgroundColor="LightGray"
        >
            <ListView.ItemTemplate>
                <DataTemplate></DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button
            x:Name="btnAgregarServicio"
            Text="Agregar Servicio"
            Clicked="btnAgregarServicio_Clicked"
            HeightRequest="80"
        />

    </StackLayout>
</ContentPage>
