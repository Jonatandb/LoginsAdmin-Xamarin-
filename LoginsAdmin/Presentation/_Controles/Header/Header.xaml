<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms" 
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d"
                x:Class="LoginsAdmin.Presentation._Controles.HeaderLoginsAdmin"
                xmlns:ctrls="clr-namespace:LoginsAdmin.Presentation._Controles"
                BackgroundColor="{StaticResource MainLightBlue}">
    
    <StackLayout AbsoluteLayout.LayoutFlags="WidthProportional" 
            AbsoluteLayout.LayoutBounds="0, 0, 1, 70"
            BackgroundColor="{StaticResource MainLightBlue}">

        <Label Text="{StaticResource AppName}" 
                TextColor="{StaticResource MainBlue}" 
                FontSize="Title" 
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                VerticalOptions="CenterAndExpand" 
                LineBreakMode="NoWrap"
                BackgroundColor="{StaticResource MainLightBlue}"/>
            
        <ctrls:About HorizontalOptions="Center" VerticalOptions="End"/>

    </StackLayout>
    
    <Image Source="icon" 
            AbsoluteLayout.LayoutBounds="0, 0, 70, 70"
            BackgroundColor="{StaticResource MainLightBlue}"
            IsOpaque="True"
            Margin="5, 5, 0, 5"/>

</AbsoluteLayout>